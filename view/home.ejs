<link rel="stylesheet" href="/css/home.css">
<div id="home-container">
        <section id="post-feed">
                <h2>Happenings</h2>
                <% if(locals.user){%>
                <form action="/posts/create" id="post-form-new" method="POST">
                        <textarea name="content" cols="30" rows="3" placeholder="Write what you feel"></textarea>
                        <input type="submit" value="Post">
                </form>
                <%}%>
                <div id="container-post-list">
                        <ul>
                                <% for (post of posts){%>
                                        <%- include('_post') -%>
                                <%}%>
                        </ul>
                </div>
        </section>
        <section id="user-friends">
                <h4>Friends</h4>
                <% for (u of all_users){ %>
                        <p><a href="/users/profile/<%= u.id%>"><%= u.name%></a></p>
                <%}%>
        </section>
</div>
<script src="/js/home_post.js"></script>